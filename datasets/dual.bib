	journal = {Current Biology},
	author = {Peng, Long and Zhang, Yan and Druzhinina, Irina S. and Kubicek, Christian P. and Wang, Yuchen and Zhu, Zhiyong and Zhang, Yuwei and Wang, Kexuan and Liu, Zhuo and Zhang, Xiaoguo and Martin, Francis and Yuan, Zhilin},
